<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_bk">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#f3f5f7"
            android:gravity="left|center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#333333"
            android:text="@string/choose_color"
            android:textSize="14dp"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/NormalPadding"
            android:paddingBottom="@dimen/NormalPadding">
            <me.hekr.sthome.wheelwidget.view.WheelView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/color" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/colorshow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/NormalPadding"
                android:layout_centerVertical="true"
                android:background="@color/red"/>
        </RelativeLayout>
    </LinearLayout>

<LinearLayout
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.hekr.sthome.commonBaseView.PinnedHeaderListView
            android:id="@+id/sDetailListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">
        </me.hekr.sthome.commonBaseView.PinnedHeaderListView>
    </LinearLayout>
</LinearLayout>

</LinearLayout>
