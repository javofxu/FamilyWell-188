<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_bk">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#f3f5f7"
            android:gravity="left|center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#333333"
            android:text="@string/choose_color"
            android:textSize="14dp"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/NormalPadding"
        android:paddingBottom="@dimen/NormalPadding">
        <me.hekr.sthome.wheelwidget.view.WheelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/color" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/colorshow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/NormalPadding"
            android:layout_centerVertical="true"
            android:background="@color/red"/>
        </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/modle_main_padding">

        <LinearLayout
            android:paddingTop="@dimen/modle_scenceList_title_padding"
            android:paddingBottom="@dimen/modle_scenceList_title_padding"
            android:layout_marginLeft="@dimen/modle_main_padding"
            android:paddingRight="@dimen/modle_main_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_normal"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="left|top"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/scene_list"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textSize="@dimen/content_size"
                    />
            </LinearLayout>
        </LinearLayout>

        <me.hekr.sthome.commonBaseView.PinnedHeaderListView
            android:id="@+id/sysListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:dividerHeight="0dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:divider="@null"/>
    </LinearLayout>

</LinearLayout>
